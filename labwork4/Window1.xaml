<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Самостоятельные слайдеры" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="t1" Text="Текст" FontSize="{Binding ElementName=slider1, Path=Value}" Height="50" />
        <TextBox x:Name="t2" Text="{Binding ElementName=t1, Path=Text, UpdateSourceTrigger=PropertyChanged}" FontSize="{Binding ElementName=slider2, Path=Value}" Height="50" />
        <Slider x:Name="slider1" Minimum="5" Maximum="30" Value="{Binding ElementName=t3, Path=Text, Mode=OneWay}" Height="50"/>
        <Slider x:Name="slider2" Minimum="5" Maximum="30" Value="{Binding ElementName=t3, Path=Text, Mode=OneWay}" Height="50" />
        <TextBox x:Name="t3" Text="12" Height="50" />
        <Button Content="Закрыть" Width="185" Height="60" Margin="100" Click="Button_Click"/>
    </StackPanel>
</Window>
